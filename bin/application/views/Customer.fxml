<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" minHeight="122.0" prefHeight="420.0" prefWidth="320.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65" fx:controller="application.controllers.CustomerController">
  <children>
    <VBox alignment="CENTER" prefHeight="222.0" prefWidth="301.0" spacing="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
      <children>
        <Label text="Customer">
          <font>
            <Font size="18.0" />
          </font>
        </Label>
            <TextField fx:id="firstNameField" promptText="Enter First Name" />
            <TextField fx:id="lastNameField"  promptText="Enter Last Name" />
            <TextField fx:id="phoneNumberField" promptText="Enter Phone Number" />
            <TextField fx:id="customerAddressField" promptText="Enter Address" />
        <HBox alignment="CENTER_LEFT" prefHeight="57.0" prefWidth="281.0" spacing="20.0">
          <children>
            <Button mnemonicParsing="false"  onAction="#screenBack" text="Back" />
            <Button mnemonicParsing="false"  onAction="#saveCustomer" text="Save" />
            <Button mnemonicParsing="false" fx:id="btnPets" onAction="#addPets" text="Add Pets" />
          </children>
        </HBox>
      </children>
      <padding>
        <Insets />
      </padding>
    </VBox>
  </children>
</AnchorPane>
